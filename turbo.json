{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "OPENAI_API_KEY",
        "AUTH_SECRET",
        "NEYNAR_API_KEY",
        "MBD_BEARER_TOKEN",
        "MBD_FEED_ID",
        "WARPCAST_AUTH_TOKEN",
        "POSTGRES_URL",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "ZAPPER_API_KEY",
        "CLANKER_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
